<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_8_dp"
    android:layout_marginTop="@dimen/common_4_dp"
    android:layout_marginEnd="@dimen/common_8_dp"
    android:layout_marginBottom="@dimen/common_4_dp"
    android:background="@drawable/card_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_95_dp"
        android:padding="1dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/image_95_dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person"
            />
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivUser"
            android:orientation="vertical"
            android:layout_margin="@dimen/common_8_dp">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="sneha bhattasana"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_16_sp"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvUserEmail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:text="sneha bhattasana"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/common_8_dp"
                android:textSize="@dimen/font_12_sp"
                />


        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_delete"
                android:padding="@dimen/common_8_dp"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_edit"
                android:padding="@dimen/common_8_dp"
                />

        </android.support.v7.widget.LinearLayoutCompat>
    </RelativeLayout>

</RelativeLayout>